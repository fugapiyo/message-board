<div class="panel panel-info">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
<% @messages.each do |message| %>
  <span class="label label-info"><%= message.name %></span>
  <%= message.body %>
  <br>
<% end %>
</div>
</div>

<div class="panel panel-default">
  <div class="panel-heading">
    投稿
  </div>
    <div class="panel-body">
      <div class="form-horizontal" role="form">
        <%= form_for(Message.new) do |f| %>
          <% if @message.errors.present? %>
            <div class="alert alert-danger">
              <%= alert %>
              <ul>
                <% @message.errors.full_messages.each do |full_message| %>
                  <li>
                    <%= full_message %>
                  </li>
                <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label "名前", :class => "col-sm-1 control-label" %>
            <div class="col-sm-3">
      	<%= f.text_field :name, :class => "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <%= f.label "本文", :class => "col-sm-1 control-label" %>
            <div class="col-sm-7">
      	<%= f.text_area :body, :class => "form-control" %>
            </div>
          </div>
          <div class="col-sm-2">
            <%= f.submit '送信', class: "btn btn-sm btn-primary btn-block" %>
          </div>
      <% end %>
    </div>
  </div>
</div>
