<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ入力欄
  </div>
  <div class="panel-body">
    <div class="form-horizontal" role="form">
      <%= form_for(@message) do |f| %>
        <% if @message.errors.present? %>
          <div class="alert alert-danger">
            <%= alert %>
            <ul>
              <% @message.errors.full_messages.each do |full_message| %>
                <li>
                  <%= full_message %>
                </li>
              <% end %> 
            </ul>
          </div> 
        <% end %>
        
      <div class="form-group">
        <%= f.label "名前", :class => "col-sm-1 control-label" %>
        <div class="col-sm-3">
          <%= f.text_field :name %>
        </div>
      </div>

      <div class="form-group">
        <%= f.label "年齢", :class => "col-sm-1 control-label" %>
        <div class="col-sm-3">
          <%= f.number_field :age, :class => "form-control", min:"0", max:"100" %>
        </div>
      </div>
      
      <div class="form-group">
        <%= f.label "本文", :class => "col-sm-1 control-label" %>
        <div class="col-sm-7">
          <%= f.text_area :body, :class => "form-control" %>
        </div>
      </div>
      
      <div class="col-sm-2">
        <%= f.submit '送信', class: "btn btn-sm btn-primary btn-block" %>
      </div>
  
      <% end %>
    </div>
  </div>
</div>
